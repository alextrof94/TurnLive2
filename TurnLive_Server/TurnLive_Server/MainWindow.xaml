<Window x:Class="TurnLive_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="270" Width="404" WindowStyle="None" MinWidth="280" MinHeight="150" Closed="Window_Closed" Loaded="Window_Loaded">
	<Grid>
		<Border BorderBrush="Silver" BorderThickness="1" HorizontalAlignment="Stretch" Margin="0" Name="boBG" VerticalAlignment="Stretch" MouseDown="Moving">
			<Rectangle Fill="White" Name="reBG" Stroke="Black" MouseDown="Moving" />
		</Border>
		<ListBox Margin="12,70,12,12" Name="lbLog" ItemsSource="{Binding}" />
		<Button Content="Изменить настройки" Height="23" Margin="0,41,12,0" Name="buSettings" VerticalAlignment="Top" HorizontalAlignment="Right" Width="149" IsEnabled="True" Click="buSettings_Click" />
		<Button Content="Запустить" Height="23" Margin="12,41,167,0" Name="buServer" VerticalAlignment="Top" Click="buServer_Click" />
		<Button Content="Закрыть программу" Height="23" Margin="12,12,12,0" Name="buClose" IsEnabled="True" VerticalAlignment="Top" Click="buClose_Click" />
	</Grid>
</Window>

